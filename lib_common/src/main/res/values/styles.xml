<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 从顶部进入动画 -->
    <style name="DialogAnimationFromTop">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_from_top</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_to_top</item>
    </style>

    <!-- 从底部进入动画 -->
    <style name="DialogAnimationFromBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_to_bottom</item>
    </style>

    <style name="CustomToastDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>