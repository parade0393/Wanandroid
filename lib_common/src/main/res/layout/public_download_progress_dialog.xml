<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/public_10dp_white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names"
        android:textColor="?android:textColorPrimary"
        android:includeFontPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="@tools:sample/full_names"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvPercent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        tools:text="的估计是"/>
    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5dp"
        app:layout_constraintStart_toEndOf="@+id/tvSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSize"
        tools:text="二二"/>

    <ProgressBar
        android:id="@+id/pb_download"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSize"
        app:layout_constraintBottom_toTopOf="@+id/v_divider"
        android:layout_marginTop="@dimen/_5dp"
        app:layout_goneMarginBottom="@dimen/_16dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

    <View
        android:id="@+id/v_divider"
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_download"
        app:layout_constraintBottom_toTopOf="@+id/tvConfirm"
        android:visibility="gone"
        android:background="#f4f4f4"/>


    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_vertical_divider"
        app:layout_constraintTop_toBottomOf="@+id/v_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="15dp"
        android:gravity="center"
        tools:text="取消" />

    <View
        android:id="@+id/v_vertical_divider"
        android:layout_width="1px"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCancel"
        app:layout_constraintBottom_toBottomOf="@+id/tvCancel"
        android:background="#f4f4f4"/>


    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/v_vertical_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        tools:text="确定"
        android:textColor="@color/md_theme_primary"/>

    <!-- 按钮组 -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="v_divider,tvCancel,v_vertical_divider,tvConfirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>